.event-card {
  padding: 16px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.event-header {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 6px;
}

.event-time, .event-location {
  font-size: 14px;
  color: #666;
  margin-bottom: 6px;
}
