/* newPage.wxss */
.container {
  padding: 20px;
}

.form-item {
  margin-bottom: 20px;
}

label {
  font-weight: bold;
  margin-right: 10px;
}

.picker {
  border: 1px solid #ddd;
  padding: 10px;
  border-radius: 5px;
}

/* 不可编辑状态下的样式 */
.readonly {
  background-color: #f5f5f5;
  border: none; /* 去掉边框 */
  color: #999; /* 文字变灰 */
  cursor: not-allowed; /* 鼠标变成禁止状态（只在浏览器上有效） */
}
